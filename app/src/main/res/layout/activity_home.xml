<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RedSecondary"
    tools:context=".View.HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16">

        <Button
            android:id="@+id/wasit1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_green"
            android:fontFamily="@font/mmedium"
            android:text="Judge 1"
            android:textColor="@color/BlackPrimary"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/wasit2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_green"
            android:fontFamily="@font/mmedium"
            android:text="Judge 2"
            android:textColor="@color/BlackPrimary"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/wasit3"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_green"
            android:fontFamily="@font/mmedium"
            android:text="Judge 3"
            android:textColor="@color/BlackPrimary"
            android:textSize="30sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/wasit4"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_green"
            android:fontFamily="@font/mmedium"
            android:text="Judge 4"
            android:textColor="@color/BlackPrimary"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/wasit5"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_green"
            android:fontFamily="@font/mmedium"
            android:text="Judge 5"
            android:textColor="@color/BlackPrimary"
            android:textSize="30sp"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>